Package: contRibution
Type: Package
Title: Visual Documentation of Project Contributions
Version: 0.1.0
Authors@R: c(
             person("Raoul", "Wadhwa", email = "raoulwadhwa@gmail.com",
                    role = c("aut", "cre")),
             person("Nikhil", "Krishnan", role = "aut"),
             person("Jacob", "Scott", role = "aut")
